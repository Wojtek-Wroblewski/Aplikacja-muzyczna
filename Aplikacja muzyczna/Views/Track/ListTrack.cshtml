@model IEnumerable<Aplikacja_muzyczna.Models.DetailTracks>

@{
    ViewBag.Title = "ListTrack";
}

<h2>ListTrack</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="form-horizontal" style=" text-align:center;">
    <tr style=" text-align:center;">
        <th style=" padding:15px;">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th style=" padding:15px;">
            @Html.DisplayNameFor(model => model.ArtistIdFK)
        </th>
        <th style=" padding:15px;">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th style=" padding:15px;">
            @Html.DisplayNameFor(model => model.SearchString)
        </th>
        <th style=" padding:15px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr style=" text-align:center;">
        <td style=" padding:15px;">
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td style=" padding:15px;">
            @Html.DisplayFor(modelItem => item.ArtistIdFK)
        </td>
        <td style=" padding:15px;">
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td style=" padding:15px;">
            @Html.DisplayFor(modelItem => item.SearchString)
        </td>
        <td style=" padding:15px;">
            @Html.ActionLink("Edit", "Edit", new { id=item.TrackId }) 
            @Html.ActionLink("Details", "Details", new { id=item.TrackId }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.TrackId })
        </td>
    </tr>
}

</table>
